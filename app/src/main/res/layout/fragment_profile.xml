<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layoutDirection="rtl"
    tools:context=".profileFragment">

    <ImageView
        android:id="@+id/home_rounded_up"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_180sdp"
        android:layout_marginTop="-7dp"
        android:src="@drawable/home_bg_up"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.core.widget.NestedScrollView
        android:id="@+id/scrollView2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/home_rounded_up">

        <LinearLayout
            android:id="@+id/shop_details_linear"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingHorizontal="20dp">

            <LinearLayout
                android:id="@+id/frist_linearLayout"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_130sdp"
                android:orientation="horizontal"
                android:paddingHorizontal="10dp">

                <androidx.cardview.widget.CardView
                    android:id="@+id/add_shops_cardview"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/_110sdp"
                    android:layout_margin="10dp"
                    android:layout_weight="1"
                    app:cardCornerRadius="@dimen/_15sdp">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/bus"
                            android:layout_centerHorizontal="true"
                            android:layout_margin="10dp"
                            android:text="إضافة منشأه"
                            android:textColor="@color/custom"
                            android:textSize="@dimen/_14ssp"
                            app:fontFamily="@font/boldiphone" />

                        <ImageView
                            android:id="@+id/bus"
                            android:layout_width="@dimen/_75sdp"
                            android:layout_height="@dimen/_60sdp"
                            android:layout_centerHorizontal="true"
                            android:layout_marginTop="15dp"
                            app:srcCompat="@drawable/add_shop" />
                    </RelativeLayout>
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:id="@+id/show_all_shops_cardview"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/_110sdp"
                    android:layout_margin="10dp"
                    android:layout_weight="1"
                    app:cardCornerRadius="@dimen/_15sdp">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/bus2"
                            android:layout_centerHorizontal="true"
                            android:layout_marginStart="10dp"
                            android:layout_marginTop="10dp"
                            android:layout_marginEnd="10dp"
                            android:layout_marginBottom="10dp"
                            android:text="عرض المنشئآت"
                            android:textColor="@color/custom"
                            android:textSize="@dimen/_14ssp"
                            app:fontFamily="@font/boldiphone" />

                        <ImageView
                            android:id="@+id/bus2"
                            android:layout_width="@dimen/_75sdp"
                            android:layout_height="@dimen/_60sdp"
                            android:layout_centerHorizontal="true"
                            android:layout_marginTop="15dp"
                            app:srcCompat="@drawable/show_shop" />
                    </RelativeLayout>
                </androidx.cardview.widget.CardView>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/socend_linearLayout"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/_130sdp"
                android:orientation="horizontal"
                android:paddingHorizontal="10dp">

                <androidx.cardview.widget.CardView
                    android:id="@+id/history_shops_cardview"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/_110sdp"
                    android:layout_margin="10dp"
                    android:layout_weight="1"
                    android:visibility="gone"
                    app:cardCornerRadius="@dimen/_15sdp">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/bus6"
                            android:layout_centerHorizontal="true"
                            android:layout_margin="10dp"
                            android:text="سجل المسح"
                            android:textColor="@color/custom"
                            android:textSize="@dimen/_14ssp"
                            app:fontFamily="@font/boldiphone" />

                        <ImageView
                            android:id="@+id/bus6"
                            android:layout_width="@dimen/_75sdp"
                            android:layout_height="@dimen/_60sdp"
                            android:layout_centerHorizontal="true"
                            android:layout_marginTop="15dp"
                            app:srcCompat="@drawable/home_history" />
                    </RelativeLayout>
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:id="@+id/show_added_shops_cardview"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/_110sdp"
                    android:layout_margin="10dp"
                    android:layout_weight="1"
                    android:visibility="visible"
                    app:cardCornerRadius="@dimen/_15sdp">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/bus4"
                            android:layout_centerHorizontal="true"
                            android:layout_margin="10dp"
                            android:text=" المنشئات المضافة"
                            android:textColor="@color/custom"
                            android:textSize="@dimen/_14ssp"
                            app:fontFamily="@font/boldiphone" />

                        <ImageView
                            android:id="@+id/bus4"
                            android:layout_width="@dimen/_75sdp"
                            android:layout_height="@dimen/_60sdp"
                            android:layout_centerHorizontal="true"
                            android:layout_marginTop="15dp"
                            app:srcCompat="@drawable/home_history" />
                    </RelativeLayout>
                </androidx.cardview.widget.CardView>

            </LinearLayout>
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>